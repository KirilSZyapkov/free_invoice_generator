generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  clerkId   String    @unique
  email     String    @unique
  name      String?
  invoices  String[]  @default([])
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Invoice {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  userId        String
  from          String
  invoiceNumber String
  clientName    String
  date          String
  paymentTerms  String
  dueDate       String
  poNumber      String
  description   String
  quantity      String
  rate          String
  notes         String?
  discount      String?
  tax           String
  shipping      String?
  terms         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime?
}

model Item {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  price    Float
  quantity Int
}

enum InvoiceStatus {
  PENDING
  PAID
  CANCELLED
}
